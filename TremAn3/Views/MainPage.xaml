<Page
    x:Class="TremAn3.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModels="using.TremAn3.ViewModels"
    xmlns:toolkitConverters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    xmlns:oxyplot="using:OxyPlot.Windows"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:helpers="using:TremAn3.Helpers"
    Style="{StaticResource PageStyle}"
    Loaded="{x:Bind ViewModel.LoadedAsync}"
    mc:Ignorable="d">
    <Page.Resources>
        <toolkitConverters:StringFormatConverter x:Key="StringFormatConverter"></toolkitConverters:StringFormatConverter>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="FreqCounterStates">
                <VisualState x:Name="Closed">
                    <VisualState.Setters>
                        <Setter Target="GridSplitterFreqCounter.Width" Value="0"/>
                        <Setter Target="FreqCounterContainer.Width" Value="0"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <StateTrigger   IsActive="{x:Bind  helpers:StaticConverters.InverseBool(ViewModel.IsFreqCounterOpen),Mode=OneWay}" ></StateTrigger>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="Open">

                   
               
                   
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"  x:Name="GridSplitterFreqCounter"/>
            <ColumnDefinition  x:Name="FreqCounterContainer" />
        </Grid.ColumnDefinitions>
        <MediaPlayerElement
            x:Name="mpe" AutoPlay="False" AreTransportControlsEnabled="True"
            Source="{x:Bind ViewModel.MediaPlayerViewModel.Source, Mode=OneWay}" >
            <MediaPlayerElement.TransportControls>
                <MediaTransportControls IsCompact="False"/>
            </MediaPlayerElement.TransportControls>
        </MediaPlayerElement>
        <controls:GridSplitter CursorBehavior="ChangeOnSplitterHover"   Grid.Column="1" >
           
        </controls:GridSplitter>
        <StackPanel Orientation="Vertical"  Grid.Column="2" Padding="5" >
            
            <Button Content="Count freq" Margin="5" IsEnabled="{x:Bind helpers:StaticConverters.InverseBool(ViewModel.FreqCounterViewModel.IsComputationInProgress), Mode=OneWay}"  Click="{x:Bind ViewModel.GetFrameClickAsync}" />
            <TextBlock Grid.Row="1" Visibility="{x:Bind helpers:StaticConverters.FreqDoubleToVisibility(ViewModel.FreqCounterViewModel.VideoMainFreq), Mode=OneWay}">
                <Run>Main frequency:  </Run>
                <Run Text="{x:Bind ViewModel.FreqCounterViewModel.VideoMainFreq , Mode=OneWay,Converter={StaticResource StringFormatConverter}, ConverterParameter=' {0:F2} Hz' }"/>
            </TextBlock>
            <Grid  Grid.Row="2" Visibility="{x:Bind helpers:StaticConverters.BoolToVisiblity(ViewModel.FreqCounterViewModel.IsComputationInProgress),Mode=OneWay}" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Bind ViewModel.ProgressPercentage, Mode=OneWay,Converter={StaticResource StringFormatConverter}, ConverterParameter=' {0:F2} %' }"  />
                <ProgressBar Grid.Column="1" MinWidth="0"   Value="{x:Bind ViewModel.ProgressPercentage, Mode=OneWay}" />
            </Grid>
            <oxyplot:PlotView Grid.Row="3" Height="200"  Model="{x:Bind ViewModel.FreqCounterViewModel.PlotModel, Mode=OneWay}"/>
        <!--oxyplot bug numero dont know: it cannot be in grid or cannot be without height?? so it is separated from nodata-->
            <TextBlock Canvas.ZIndex="1" Grid.Row="3" Margin="0,-200,0,0" Text="No data" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray" Style="{StaticResource TitleTextBlockStyle}" Visibility="{x:Bind  helpers:StaticConverters.BoolToVisiblityInverse(ViewModel.FreqCounterViewModel.IsDataAvailableForPlot), Mode=OneWay}"/>
            <Grid Grid.Row="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
               
                <TextBlock Text="Time range:" Style="{StaticResource SubtitleTextBlockStyle}" />
                <controls:RangeSelector StepFrequency="0.1" Grid.Row="1"  x:Name="RangeSelectorControl" 
	                    Minimum="0" 
	                    Maximum="{x:Bind ViewModel.FreqCounterViewModel.Maximum, Mode=OneWay}"
                        RangeMax="{x:Bind ViewModel.FreqCounterViewModel.Maxrange, Mode=TwoWay}"
                        RangeMin="{x:Bind ViewModel.FreqCounterViewModel.Minrange, Mode=TwoWay}">
                </controls:RangeSelector>
                <TextBlock Grid.Row="2" HorizontalAlignment="Left" Text="{x:Bind helpers:StaticConverters.DoubleToTimeConverter(ViewModel.FreqCounterViewModel.Minrange), Mode=OneWay}"/>
                <TextBlock Grid.Row="2" HorizontalAlignment="Right" Text="{x:Bind helpers:StaticConverters.DoubleToTimeConverter(ViewModel.FreqCounterViewModel.Maxrange), Mode=OneWay}"/>
            </Grid>

            <Grid Grid.Row="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock  ToolTipService.ToolTip="Lower => faster; Higher => more accurate " Style="{StaticResource SubtitleTextBlockStyle}" >
                    <Run Text="Percentage of Resolution ("/><Run Text="{x:Bind ViewModel.FreqCounterViewModel.PercentageOfResolution.ToString(), Mode=OneWay}" />
                    <Run Text="%)"/>
                </TextBlock>
                <Slider Maximum="100" Minimum="10" Value="{x:Bind ViewModel.FreqCounterViewModel.PercentageOfResolution, Mode=TwoWay}" StepFrequency="1" Grid.Row="1" />
                    
            </Grid>


        </StackPanel>

    </Grid>
</Page>
